@page
@model SparkAutoRazor.Pages.ServiceTypes.IndexModel
@{
}


<br /> <br />

<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service type list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info">
                <i class="fas fa-plus"></i>&nbsp;&nbsp;Create new Service
            </a>
        </div>
    </div>
    <br />
    <div>
        @if (@Model.ServiceTypes.Any())
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceTypes.FirstOrDefault().Name);
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceTypes.FirstOrDefault().Price);
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.ServiceTypes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Price)
                        </td>
                        <td style="width: 150px;">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                
                                <a class="btn btn-success text-white" asp-page="Details" asp-route-Id="@item.Id">
                                    <i class="far fa-list-alt"></i>
                                </a>
                                
                                <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                               
                            </div>
                        </td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p>No Service type exist. Please create a new Service type.</p>
        }
    </div>
</div>